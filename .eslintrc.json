{
  "extends": ["airbnb", "prettier"],
  "rules": {
    "semi": ["error", "always"],
    "padded-blocks": "off",
    "comma-dangle": ["error", "always-multiline"],
    "consistent-return": 0,
    "no-shadow": 0,
    "no-prototype-builtins": 0,
    "camelcase": 0,
    "valid-jsdoc": [
      "error",
      {
        "prefer": {
          "arg": "param",
          "argument": "param",
          "return": "returns"
        },
        "preferType": {
          "boolean": "Boolean",
          "number": "Number",
          "object": "Object",
          "string": "String"
        }
      }
    ]
  }
}
